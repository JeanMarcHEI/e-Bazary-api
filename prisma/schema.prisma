generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Car {
    productId Int @id @default(autoincrement())
    productName String 
    description String 
    brand String 
    model String 
    price Float
    color String 
    motorType String 
    power String 
    placeNumber Int
    status Boolean
    type String 
}

model Images {
    imagesId Int @id @default(autoincrement()) 
    productId Int 
    url String 
}

model Admin {
    userAdminId Int @id @default(autoincrement())
    email String  
    name String  
    password String  
    appointment Appointment[]
}

model Appointment {
    appointmentId Int @id @default(autoincrement())
    username String 
    firstname String  
    email String 
    contact String 
    appointmentDate DateTime @default(now())
    status Boolean
    userAdminId Int
    admin Admin @relation(fields: [adminId], references: [userAdminId])
    adminId Int     @unique
}
